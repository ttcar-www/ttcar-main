{% extends 'admin/admin.html.twig' %}

{% block body %}
    <div class="group_text">
        <!-- Striped table start -->
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-warning flash-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="col-lg-12 mt-5" style="padding-bottom: 5%">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Tout les lieux de livraisons</h4>
                    <a href="{{ path('create_mark') }}" style="color: darkslategrey; margin-left: 5%" class="btn btn-light"><i class="fas fa-hand-sparkles"></i> Ajout√© une marque</a>
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Tranches</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for mark in marks %}
                                    <tr>
                                        <th scope="row">{{ mark.id }}</th>
                                        <td>{{ mark.libelle }}</td>
                                        <td>{{ mark.daySlices }}</td>
                                        <td>
                                            <a href="{{ path('edit_mark', { 'id': mark.id }) }}"> <i class="far fa-edit"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Striped table end -->
    </div>
{% endblock %}
