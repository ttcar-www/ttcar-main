        {% block javascripts %}
            <script>
                function toogleMenu() {
                    let x = document.getElementById("toogle_menu");
                    if (x.style.display === "none") {
                        x.style.display = "block";
                    } else {
                        x.style.display = "none";
                    }
                }
            </script>

