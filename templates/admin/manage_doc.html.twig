{% extends 'admin/admin.html.twig' %}

{% block body %}
    <div class="group_text">
        {# read and display all flash messages #}
{#        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-warning flash-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}#}
        <!-- Striped table start -->
        <div class="col-lg-12 mt-5" style="padding-bottom: 5%">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Tout les docs</h4>
                    <a href="{{ path('new_doc') }}" style="color: darkslategrey; margin-left: 5%" class="btn btn-light"><i class="fas fa-paper-plane"></i> Ajout√© un document</a>
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                              {% for doc in docs %}
                                    <tr>
                                        <th scope="row">{{ doc.id }}</th>
                                        <td>{{ doc.name }}</td>
                                        <td>
                                            {% for reason in doc.getReason %}
                                            {{ reason.content }} ,
                                            {% endfor %}
                                        </td>
                                        <td>
                                            <a href="#"> <i class="far fa-edit"></i></a>
                                            <br>
                                            <a href="{{ path('delete_doc', { 'id': doc.id }) }}" ><i class="ti-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Striped table end -->
    </div>
{% endblock %}
