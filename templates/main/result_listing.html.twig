{% extends 'base.html.twig' %}

{% block body %}
    <style>

        #form_placeDepart {
            overflow: visible;
            width: 90%;
            height: 55px;
            padding: 10px;
            left: 380px;
            border-radius: 30px;
            top: 35px;
        }
        #form_date_start {
            width: 90%;
            height: 55px;
            left: 745px;
            top: 35px;
            overflow: visible;
            border-radius: 30px;
            padding: 10px;
            min-width: 112px;
        }
        #form_placeReturn {
            overflow: visible;
            width: 90%;
            height: 55px;
            padding: 10px;
            left: 380px;
            border-radius: 30px;
            top: 110px;
        }
        #form_date_end {
            width: 90%;
            height: 55px;
            left: 745px;
            top: 110px;
            overflow: visible;
            border-radius: 30px;
            padding: 10px;
            min-width: 112px;
        }
        #form_promo {
            overflow: visible;
            width: 100%;
            height: 38px;
            left: 190px;
            border-radius: 30px;
            top: 230px;
            padding: 10px;
        }
        #form_mark {
            position: relative;
            width: 75px;
            left: 70px;
            top: 46px;
            overflow: visible;
        }
        #form_mark  label{
            overflow: visible;
            width: 61px;
            white-space: nowrap;
            text-align: left;
            font-family: Montserrat;
            font-style: normal;
            font-weight: normal;
            font-size: 14px;
            color: rgba(255,255,255,1);
        }

        /* media queries */
        /* Tablette */
        @media screen and (max-width:767.98px){
            #form_mark {
                left: -58px;
                top: 84px;
                overflow: visible;
                display: inline-flex;
            }
            #form_mark label {
                margin-right: 22px;
            }
            
        }

        /* Smartphone */
        @media screen and (max-width:576.98px){
            #form_mark {
                left: 70px;
                top: 70px;
                overflow: visible;
                display: inline-block;
                height: 100%;
                width: 83px;
                
            }
            #form_mark label {
                margin-right: 0px;
                margin-top: 15px;
                margin-left: 5px;
            }
            #form_placeDepart {
                margin-top: 15px;
                margin-bottom: 15px;
            }
            #form_placeReturn {
                margin-top: 15px;
                margin-bottom: 15px;
            }
        }
        
    </style>
<div>
    <div class="listing_V1">
        <meta name="viewport" content="width=device-width" />

        <div class="d-flex justify-content-center">
            <div class="step_search">
                <div class="row align-items-center d-flex justify-content-center text-center">
                    <div class="col-4">
                        <span class="span_step1">1</span>
                    </div>
                    <div class="col-4">
                        <span class="span_step2">2</span>
                    </div>
                    <div class="col-4">
                        <span class="span_step3">3</span>
                    </div>

                </div>
            </div>
        </div>

        <div class="img_listing">
            <img src="{{ asset('build/img04.png') }}" alt="ttcar_search">
        </div>
        <div class="d-flex justify-content-center">
            <div class="row">
                <div class="col-12 col-lg-12 col-xl-10 d-flex justify-content-center">
                    <div class="div_result_search_listing">
                        <div class="row">   
                            <div class="col-sm-12 col-md-4 col-lg-4">
                                <div class="select_mark_listing">
                                    <div class="row">
                                        <div class="col-6">
                                            <img src="{{ asset('build/renault-blanc.png') }}" alt="renaultlogo" class="logo_renault_form_listing">
                                            <img src="{{ asset('build/peugeottrans.png') }}" alt="peugeotlogo" class="logo_peugeot_form_listing" style="display: none">
                                            <img src="{{ asset('build/citroentrans.png') }}" alt="citroenlogo" class="logo_citroen_form_listing" style="display: none">
                                            <img src="{{ asset('build/dstrans.png') }}" alt="dslogo" class="logo_ds_form_listing" style="display: none" >
                                        </div>
                                        
                                        <div class="col-3 col-sm-6 col-md-6 col-lg-6">
                                            {{ form_start(formSearch) }}
                                            <div class="search_mark_result">
                                                {{ form_row(formSearch.mark) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="search_depart_result_listing">
                                    <div class="row align-items-center d-flex justify-content-center text-center">
                                        <div class="col-12 col-sm-2 col-md-2 col-lg-2">
                                            <span>Livraison</span>
                                        </div>
                                        <div class="col-12 col-sm-6 col-md-6">
                                            {{ form_row(formSearch.placeDepart) }}
                                        </div>
                                        <div class="col-12 col-sm-3 col-md-3">
                                            {{ form_row(formSearch.date_start) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="search_return_result_listing">
                                    <div class="row align-items-center d-flex justify-content-center text-center">
                                        <div class="col-12 col-sm-2 col-md-2 col-lg-2">
                                            <span>Retour</span>
                                        </div>
                                        <div class="col-12 col-sm-6 col-md-6">
                                            {{ form_row(formSearch.placeReturn) }}
                                        </div>
                                        <div class="col-12 col-sm-3 col-md-3">
                                            {{ form_row(formSearch.date_end) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="d-flex justify-content-center">
                            <div class="col">
                                <hr class="dashed">
                            </div>
                        </div>
                        <div class="special_code_listing">
                            <div class="row align-items-center d-flex justify-content-center text-center">
                                <div class="col-3 col-sm-3 col-md-3">
                                    <span class="span_code_result_listing">Code spécial</span>
                                </div>
                                <div class="col-4 col-sm-4 col-md-4">
                                    {{ form_row(formSearch.promo) }}
                                </div>
                                <div class="col-5 col-sm-5 col-md-5">
                                    <div class="btn_search_send_resul_listing">
                                        <button id="searchBtn_resul">Modifier ma recherche</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_end(formSearch) }}
                    </div>
                </div>
        
                <div class="col-12 col-lg-12 col-xl-2 d-flex justify-content-center">
                    <div class="div_info_search_listing">
                        <div class="row">
                            <span class="price_info_listing">Ce prix inclut :</span>
                            <br>
                            <div class="col-3 col-md-3 col-lg-4 col-xl-12">
                                <ul class="ul_info_listing">
                                    <li> <img src="{{ asset('build/Groupe_216.png') }}" class="info_img"> Un forfait 6 jours</li>
                                    <li><img src="{{ asset('build/Groupe_216.png') }}" class="info_img"> Un véhicule neuf</li>
                                </ul>
                            </div>
                            <div class="col-5 col-md-5 col-lg-4 col-xl-12">
                                <ul class="ul_info_listing">
                                    <li><img src="{{ asset('build/Groupe_216.png') }}" class="info_img"> L’assurance multirisques
                                        sans franchise</li>
                                    <li><img src="{{ asset('build/Groupe_216.png') }}" class="info_img"> Le kilométrage illimité</li>
                                </ul>
                            </div>
                            <div class="col-4 col-md-4 col-lg-4 col-xl-12">
                                <ul class="ul_info_listing">
                                    <li><img src="{{ asset('build/Groupe_216.png') }}" class="info_img"> L’assistance 7j / 7
                                        et 24h / 24</li>
                                    <li><img src="{{ asset('build/Groupe_216.png') }}" class="info_img"> Les frais de livraison
                                        et de restitution</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">    
            <div class="result_search_listing">
                <span class="filtre_listing">Filtrer par :</span>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div class="cars_listing">
                <div class="row">
                {% if pagination %}
                    {% for car in pagination %}
                    <div class="car_card_listing">
                        <div class="car_result_listing">
                            <div class="car_container_listing">
                            <div class="row">
                                <div class="col-12 col-sm-12 col-md-6">
                                    <span class="dispo_listing">Disponible !</span>
                                    <div class="car_tilte_listing">{{ car.mark.getlibelle }}</div>
                                    <div class="car_desc_listing">
                                        Le design intérieur gagne en attractivité. Dacia Sandero inaugure une nouvelle planche de bord carbone
                                        foncé ou bi-ton (selon versions) à l’instrumentation complète et au traité moderne avec des contours
                                        de cadrans chromés (selon versions) et des commandes dont l’ergonomie a été complètement repensée.
                                    </div>
                                    <div class="car_icon_listing">
                                        <span>
                                            <img src="{{ asset('build/Groupe_259.png') }}" alt="car" class="car_icon_listing">
                                            x {{ car.door }}
                                        </span>
                                        <span>
                                            <img src="{{ asset('build/Groupe_261.png') }}" alt="car" class="car_icon_listing">
                                            x {{ car.door }}
                                        </span>
                                        <span>
                                            <img src="{{ asset('build/Groupe_263.png') }}" alt="car" class="car_icon_listing">
                                            x {{ car.door }}
                                        </span>
                                        <span>
                                            <img src="{{ asset('build/Groupe_265.png') }}" alt="car" class="car_icon_listing">
                                        </span>
                                        <span>
                                            <img src="{{  asset('build/Groupe_267.png') }}" alt="car" class="car_icon_listing">
                                        </span>
                                    </div>
                                </div>
                            
                                <div class="col-12 col-sm-12 col-md-6 align-self-center d-flex justify-content-center">
                                    <img src="{{ asset('build/uploads/'~ car.getCarImg) }}" alt="car" class="car_img_listing">
                                </div>
                            </div>
                            </div>
                                
                            <div class="car_btn_listing">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="btn_car_listing">{{ car.name|u.truncate(25, '...') }}</span>
                                    </div>
                                    <div class="col-6 d-flex justify-content-end">
                                        {% if car.getDateStart > today %}
                                        <a href="#" class="soon_listing">Disponible à partir du : 01 Apr 2022</a>
                                    {% elseif car.isContactActived == true %}
                                        <a href="#" class="contact_listing">Contact</a>
                                    {% else %}
                                        <span class="btn_price_listing">{{ carsResult[loop.index-1]}}€
                                        <a href="{{ path('order', { 'id': car.id }) }}" class="reservez_listing">Reservez</a>
                                        </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                {% endif %}
                </div>
            </div>
        </div>
    </div>        
</div>
{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
<script>
    $(document).ready(function() {
        let renaultLogo = document.getElementsByClassName("logo_renault_form_listing");
        let peugeotLogo = document.getElementsByClassName("logo_peugeot_form_listing");
        let citroenLogo = document.getElementsByClassName("logo_citroen_form_listing");
        let dsLogo = document.getElementsByClassName("logo_ds_form_listing");

        let markRenault = document.getElementById("form_mark_1");
        let markPeugeot = document.getElementById("form_mark_2");
        let markCitroen = document.getElementById("form_mark_3");
        let markDs = document.getElementById("form_mark_4");


        if (markRenault.checked) {
            $(renaultLogo).css("display", "block");
            $(peugeotLogo).css("display", "none");
            $(citroenLogo).css("display", "none");
            $(dsLogo).css("display", "none");
        }else if (markPeugeot.checked) {
            $(peugeotLogo).css("display", "block");
            $(renaultLogo).css("display", "none");
            $(citroenLogo).css("display", "none");
            $(dsLogo).css("display", "none");
        }else if (markCitroen.checked) {
            $(citroenLogo).css("display", "block");
            $(peugeotLogo).css("display", "none");
            $(renaultLogo).css("display", "none");
            $(dsLogo).css("display", "none");
        }else if (markDs.checked) {
            $(dsLogo).css("display", "block");
            $(peugeotLogo).css("display", "none");
            $(citroenLogo).css("display", "none");
            $(renaultLogo).css("display", "none");
        }

        $(markRenault).change(function() {
            $(renaultLogo).css("display", "block");
            $(peugeotLogo).css("display", "none");
            $(citroenLogo).css("display", "none");
            $(dsLogo).css("display", "none");
        });
        $(markPeugeot).change(function() {
            $(peugeotLogo).css("display", "block");
            $(renaultLogo).css("display", "none");
            $(citroenLogo).css("display", "none");
            $(dsLogo).css("display", "none");
        });
        $(markCitroen).change(function() {
            $(citroenLogo).css("display", "block");
            $(peugeotLogo).css("display", "none");
            $(renaultLogo).css("display", "none");
            $(dsLogo).css("display", "none");
        });
        $(markDs).change(function() {
            $(dsLogo).css("display", "block");
            $(peugeotLogo).css("display", "none");
            $(citroenLogo).css("display", "none");
            $(renaultLogo).css("display", "none");
        });

    });
</script>
    {% endblock %}
{% endblock %}
