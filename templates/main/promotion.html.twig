                    $(show_ds).show();
                    no_promo_checked.style.display = "none";
                } else {
                    $(show_ds).hide();
                }
                if ($("input:checkbox[name=cb1]").is(":checked")){
                    no_promo_checked.style.display = "none";
                } else {
                    no_promo_checked.style.display = "block";
                }
            });



        });
    
    </script>
