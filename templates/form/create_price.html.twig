{% extends 'admin/admin.html.twig' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <div class="col-lg-6 col-ml-12">
                <div class="row">
                    <!-- Textual inputs start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">Ajouter un prix</h4>
                                {{ form_start(form) }}
                                <div class="form-group">
                                    <label>Prix de référence à utiliser<span>*</span></label>
                                    {{ form_row(form.libelle) }}
                                </div>
                                <div class="form-group">
                                    <label>Prix <span>*</span></label>
                                    {{ form_row(form.price) }}
                                </div>
                                <div class="form-group">
                                    <label>Prix Fournisseur<span>*</span></label>
                                    {{ form_row(form.priceSupplierValue) }}
                                </div>
                                <div class="form-group">
                                    <label>Date de debut de commande<span>*</span></label>
                                    {{ form_row(form.date_start) }}
                                </div>
                                <div class="form-group">
                                    <label>Date de fin<span>*</span></label>
                                    {{ form_row(form.date_end) }}
                                </div>
                                <div class="form-group">
                                    <label>Date de livraison <span>*</span></label>
                                    {{ form_row(form.date_start_delivery) }}
                                </div>
                                <div class="form-group">
                                    <label>Date de fin de livraison <span>*</span></label>
                                    {{ form_row(form.date_end_delivery) }}
                                </div>
                                <div class="form-group">
                                    <label>Promotion <span>en %</span></label>
                                    {{ form_row(form.promo) }}
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Créer</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}