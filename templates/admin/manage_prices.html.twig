{% extends 'admin/admin.html.twig' %}

{% block body %}
    <div class="group_text">
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-warning flash-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <!-- Striped table start -->
        <div class="col-lg-12 mt-5" style="padding-bottom: 5%">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Tout les prix</h4>
{#                    <a href="{{ path('create_pricetion') }}" style="color: blue" class="btn btn-light"><i class="fas fa-plus-circle"></i> Add price</a>#}
{#                    <a href="{{ path('create_type') }}" style="color: darkslategrey; margin-left: 5%" class="btn btn-light"><i class="fas fa-search-dollar"></i> Add Type price</a>#}
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Voiture</th>
                                    <th scope="col">Référence</th>
                                    <th scope="col">Prix Client</th>
                                    <th scope="col">Prix Fournisseur</th>
                                    <th scope="col">Date de debut</th>
                                    <th scope="col">Date de fin</th>
                                    <th scope="col">Date de livraison</th>
                                    <th scope="col">Date de réceptions</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for car in cars %}
                                    <tr>
                                        <th scope="row">{{ car.price.id }}</th>
                                        <th>{{ car.getName }}</th>
                                        <td>{{ car.price.libelle }}</td>
                                        <td><b>{{ car.price.price }}€</b></td>
                                        <td><b>{{ car.price.priceSupplierValue }}€</b></td>
                                        <td>{{ car.price.getDateStart|date("m/d/Y") }}</td>
                                        <td>{{ car.price.getDateEnd|date("m/d/Y") }}</td>
                                        <td>{{ car.price.getDateStartDelivery|date("m/d/Y") }}</td>
                                        <td>{{ car.price.getDateEndDelivery|date("m/d/Y") }}</td>
                                        <td>
                                            <a href="{{ path('edit_price', { 'id': car.price.id }) }}" class="btn btn-outline-primary""><i class="far fa-edit"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Striped table end -->
    </div>
{% endblock %}
