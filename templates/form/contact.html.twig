{% extends 'base.html.twig' %}

{% block body %}

    <section class="b-pageHeader">
        <div class="container">
            <h1 class=" wow zoomInLeft" data-wow-delay="0.5s">Contact Us</h1>
            <div class="b-pageHeader__search wow zoomInRight" data-wow-delay="0.5s">
                <h3>Get In Touch With Us Now</h3>
            </div>
        </div>
    </section><!--b-pageHeader-->

    <div class="b-breadCumbs s-shadow wow zoomInUp" data-wow-delay="0.5s">
        <div class="container">
            <a href="#" class="b-breadCumbs__page">Home</a><span class="fa fa-angle-right"></span><a href="contacts.html" class="b-breadCumbs__page m-active">Contact Us</a>
        </div>
    </div><!--b-breadCumbs-->

    <div class="b-map wow zoomInUp" data-wow-delay="0.5s">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2626.019973244258!2d2.251420515569063!3d48.83875771004304!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e67abff1727393%3A0x40594f45fea9eb2!2sT%20T%20Car%20Transit!5e0!3m2!1sfr!2sfr!4v1610724412011!5m2!1sfr!2sfr" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </div><!--b-map-->

    <section class="b-contacts s-shadow">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <div class="b-contacts__form">
                        <header class="b-contacts__form-header s-lineDownLeft wow zoomInUp" data-wow-delay="0.5s">
                            <h2 class="s-titleDet">{{ 'contact_page.form'|trans({}, 'messages') }}</h2>
                        </header>
                        <p class=" wow zoomInUp" data-wow-delay="0.5s">
                            {{ 'contact_page.help'|trans({}, 'messages') }}
                        <div id="success"></div>
                        {{ form_start(form) }}
                        <div class="form-group col-md-6">
                            {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(form.name, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="b-submit__main-element wow zoomInUp" data-wow-delay="0.5s">
                            <div class="form-group">
                                {{ form_row(form.content, { 'attr': {'class': 'form-control form-control-lg textarena_large'} }) }}
                            </div>
                        </div>
                        <button type="submit" class="btn m-btn pull-right wow zoomInUp" data-wow-delay="0.5s">Envoyer<span class="fa fa-angle-right"></span></button>

                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="b-contacts__address">
                        <div class="b-contacts__address-hours">
                            <h2 class="s-titleDet wow zoomInUp" data-wow-delay="0.5s">{{ 'contact_page.hours'|trans({}, 'messages') }}</h2>
                            <div class="b-contacts__address-hours-main wow zoomInUp" data-wow-delay="0.5s">
                                <div class="row">
                                    <div class="col-md-6 col-xs-12">
                                        <h5>{{ 'contact_page.visit'|trans({}, 'messages') }}</h5>
                                        <p>{{ 'contact_page.mond'|trans({}, 'messages') }}<br/>
                                            {{ 'contact_page.close'|trans({}, 'messages') }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="b-contacts__address-info">
                            <h2 class="s-titleDet wow zoomInUp" data-wow-delay="0.5s">{{ 'contact_page.close'|trans({}, 'messages') }}</h2>
                            <address class="b-contacts__address-info-main wow zoomInUp" data-wow-delay="0.5s">
                                <div class="b-contacts__address-info-main-item">
                                    <span class="fa fa-home"></span>
                                    {{ 'contact_page.adress'|trans({}, 'messages') }}
                                    <p>2 Avenue de la Porte de Saint-Cloud, 75016 Paris</p>
                                </div>
                                <div class="b-contacts__address-info-main-item">
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 col-xs-12">
                                            <span class="fa fa-phone"></span>
                                            {{ 'contact_page.phone'|trans({}, 'messages') }}
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-xs-12">
                                            <em>+33 (0)1 40 71 72 65/57</em>
                                            <p>{{ 'contact_page.phne_subtilte'|trans({}, 'messages') }}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="b-contacts__address-info-main-item">
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 col-xs-12">
                                            <span class="fa fa-fax"></span>
                                            {{ 'contact_page.fax'|trans({}, 'messages') }}
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-xs-12">
                                            <em>+33 (0)1 40 71 00 14</em>
                                        </div>
                                    </div>
                                </div>
                                <div class="b-contacts__address-info-main-item">
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 col-xs-12">
                                            <span class="fa fa-envelope"></span>
                                            {{ 'contact_page.email'|trans({}, 'messages') }}
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-xs-12">
                                            <em>info@ttcar.net</em>
                                        </div>
                                    </div>
                                </div>
                            </address>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!--b-contacts-->
{% endblock %}
