{% extends 'admin/admin.html.twig' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <div class="col-lg-6 col-ml-12">
                <div class="row">
                    <!-- Textual inputs start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">Information TTCAR</h4>
                                {{ form_start(form) }}
                                <div class="form-group">
                                    <label>Téléphone <span>*</span></label>
                                    {{ form_row(form.number) }}
                                </div>
                                <div class="form-group">
                                    <label>Adresse <span>*</span></label>
                                    {{ form_row(form.adress) }}
                                </div>
                                <div class="form-group">
                                    <label>Ville <span>*</span></label>
                                    {{ form_row(form.adress_city) }}
                                </div>
                                <div class="form-group">
                                    <label>Code postal <span>*</span></label>
                                    {{ form_row(form.adress_code) }}
                                </div>
                                <div class="form-group">
                                    <label>Email <span>*</span></label>
                                    {{ form_row(form.email) }}
                                </div>
                                <div class="form-group">
                                    <label>Heure d'ouverture <span>*</span></label>
                                    {{ form_row(form.hours) }}
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Créer</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
