{% extends 'admin/admin.html.twig' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <div class="col-lg-6 col-ml-12">
                <div class="row">
                    <!-- Textual inputs start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">Ajouter un article</h4>
                                {{ form_start(form) }}
                                <div class="form-group">
                                    <label>Titre de l'article <span>*</span></label>
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="form-group">
                                    <label>Contenu de l'article <span>*</span></label>
                                    {{ form_row(form.content) }}
                                </div>
                                <div class="form-group">
                                    <label>Catégorie de l'article <span>*</span></label>
                                    {{ form_row(form.categoryPost) }}
                                </div>
                                <div class="form-group">
                                    <label>Image de l'article <span>*</span></label>
                                    {{ form_row(form.postImg) }}
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Créer</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}