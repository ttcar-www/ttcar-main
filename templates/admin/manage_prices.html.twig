{% extends 'admin/admin.html.twig' %}

{% block body %}
    <div class="group_text">
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-warning flash-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <!-- Striped table start -->
        <div class="col-lg-12 mt-5" style="padding-bottom: 5%">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">All pricetions</h4>
{#                    <a href="{{ path('create_pricetion') }}" style="color: blue" class="btn btn-light"><i class="fas fa-plus-circle"></i> Add price</a>#}
{#                    <a href="{{ path('create_type') }}" style="color: darkslategrey; margin-left: 5%" class="btn btn-light"><i class="fas fa-search-dollar"></i> Add Type price</a>#}
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Value</th>
                                    <th scope="col">start_date</th>
                                    <th scope="col">end_date</th>
                                    <th scope="col">start_delivery</th>
                                    <th scope="col">end_delivery</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for price in prices %}
                                    <tr>
                                        <th scope="row">{{ price.id }}</th>
                                        <td>{{ price.libelle }}</td>
                                        <td>{{ price.price }}</td>
                                        <td>{{ price.getDateStart|date("m/d/Y") }}</td>
                                        <td>{{ price.getDateEnd|date("m/d/Y") }}</td>
                                        <td>{{ price.getDateStartDelivery|date("m/d/Y") }}</td>
                                        <td>{{ price.getDateEndDelivery|date("m/d/Y") }}</td>
                                        <td>
                                            <a href="{{ path('create_slice', { 'id': price.id }) }}"><i class="fas fa-plus-circle"></i></a>
{#                                            <br>#}
{#                                            <a href="{{ path('delete_price', { 'id': price.id }) }}"#}
{#                                               onclick="return confirm(' you want to delete?');" class="action-delete"><i class="ti-trash"></i></a>#}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Striped table end -->
    </div>
{% endblock %}
