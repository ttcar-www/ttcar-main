{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('main') }}">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-warning flash-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="{{ asset('build/tt-groupimg.png') }}" alt="Admin" class="rounded-circle" width="150" style="background-color: #c1c1c1">
                            <div class="mt-3">
                                <h4>{{ user.username }}</h4>
{#                                <p class="text-secondary mb-1">Full Stack Developer</p>#}
                                <p class="text-muted font-size-sm">{{  user.getAdressUe }}</p>
   {#                             <button class="btn btn-primary">Follow</button>
                                <button class="btn btn-outline-primary">Message</button>#}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Name</h6>
                            <span class="text-secondary">{{ user.name }}</span>
                        </li>
                        {% if user %}
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Username</h6>
                                <span class="text-secondary">{{ user.username }}</span>
                            </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Birth Date</h6>
                            <span class="text-secondary">{{ user.getBirthdaysDate|date("m/d/Y") }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Number</h6>
                            <span class="text-secondary">{{ user.phone }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Email</h6>
                            <span class="text-secondary">{{ user.email }}</span>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
{#                    <a href="{{ path('edit_me', { 'id': user.id }) }}" class="btn btn-secondary btn-lg"><i class="fas fa-user-edit"></i></a>#}
                    <a href="{{ path('edit_customer', { 'id': user.id }) }}" class="btn btn-secondary btn-lg"><i class="fas fa-user-plus"></i></a>
                    <div class="card-body">
                        <div class="row">
                            {% if user %}
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.name }} {{ user.username }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adress UE</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getAdressUe }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address Code</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getAdressCode }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address City</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getAdressCity }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address Country</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ countryUe }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address H UE</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getAdressNoUe }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address H UE</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getAdressCityHue }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address H UE</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getAdressCodeHue }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address H UE</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ countryHue }}
                            </div>
                        </div>
                        <hr>
          {#              <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Place of birth</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getPlaceBirth }}
                            </div>
                        </div>#}
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Birthdays Date</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getBirthdaysDate|date("m/d/Y") }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Piece</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getPiceIdentity }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Number piece</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getNumberPiece }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Develiry piece place</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.getDeliveryPiece }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nationality</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ nationality }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
