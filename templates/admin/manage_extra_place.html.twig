{% extends 'admin/admin.html.twig' %}

{% block body %}
    <div class="group_text">
        <!-- Striped table start -->
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-warning flash-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="col-lg-12 mt-5" style="padding-bottom: 5%">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Extra du lieu</h4>
{#
                    <a href="{{ path('create_place') }}" style="color: darkslategrey; margin-left: 5%" class="btn btn-light"><i class="fas fa-map-marked-alt"></i> Ajout√© un lieu</a>
#}
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Extra 1</th>
                                    <th scope="col">Extra 2</th>
                                    <th scope="col">Gratuit</th>
                                    <th scope="col">Jour limite</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for extraPlace in extraPlacesArray %}
                                    <tr>
                                        <th scope="row">{{ extraPlace.id }}</th>
                                        <td>{{ extraPlace.extra1 }}</td>
                                        <td>{{ extraPlace.extra2 }}</td>
                                        <td>
                                            {% if extraPlace.free %}
                                                <i class="fas fa-check-circle" style="color: green"></i>
                                            {% else %}
                                                <i class="fas fa-ban" style="color: red"></i>
                                            {% endif %}
                                        </td>
                                        <td>{{ extraPlace.daysLimit }}</td>

                                        <td>
                                            <a href="{{ path('edit_extra_place', { 'id': extraPlace.id }) }}"> <i class="far fa-edit"></i></a>
                                            <br>
                                            <a href="{{ path('delete_extra_place', { 'id': extraPlace.id }) }}"
                                               onclick="return confirm(' you want to delete?');" class="action-delete"><i class="ti-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Striped table end -->
    </div>
{% endblock %}
