{% extends 'admin/admin.html.twig' %}

{% block body %}
<div class="main-content">
    <div class="main-content-inner">
    <div class="sales-report-area sales-style-two">
        <div class="row">
            <div class="col-xl-3 col-ml-3 col-md-6 mt-5">
                <div class="single-report" style=" margin-bottom: 2%">
                    <div class="s-sale-inner pt--30 mb-3">
                        <div class="s-report-title d-flex justify-content-between">
                            <h4 class="header-title mb-0">Commandes</h4>
                            <select class="custome-select border-0 pr-3">
                                <option selected="">10 derniers jours</option>
                            </select>
                        </div>
                    </div>
                    <div id="coin_sales4" style="height: 240px; text-align: center;">
                     <p> 10 derniers jours :  {{ sommePrice }} €</p>
                        {% for price in arrayPrice %}
                          <p> {{ price }} €</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-ml-3 col-md-6 mt-5">
                <div class="single-report">
                    <div class="s-sale-inner pt--30 mb-3">
                        <div class="s-report-title d-flex justify-content-between">
                            <h4 class="header-title mb-0">Nouveau Clients</h4>
                            <select class="custome-select border-0 pr-3">
                                <option selected="">10 derniers jours</option>
                            </select>
                        </div>
                    </div>
                    <div id="coin_sales4" style="height: 240px; text-align: center;">
                        <p> 10 derniers jours :  +{{ users|length }} Clients</p>
                        {% for user in users %}
                            <p> {{ user.getUsername }} €</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-ml-3 col-md-6  mt-5">
                <div class="single-report">
                    <div class="s-sale-inner pt--30 mb-3">
                        <div class="s-report-title d-flex justify-content-between">
                            <h4 class="header-title mb-0">Commandes</h4>
                            <select class="custome-select border-0 pr-3">
                                <option selected="">10 derniers jours</option>
                            </select>
                        </div>
                    </div>
                    <div id="coin_sales4" style="height: 240px; text-align: center;">
                        <p> 10 derniers jours :  +{{ orders|length }} Commandes</p>
                        {% for order in orders %}
                            <p> <span>{{ order.id }}  :</span> <span> {{ order.price }} €</span></p>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-ml-3 col-md-6 mt-5">
                <div class="single-report">
                    <div class="s-sale-inner pt--30 mb-3">
                        <div class="s-report-title d-flex justify-content-between">
                            <h4 class="header-title mb-0">Messages</h4>
                            <select class="custome-select border-0 pr-3">
                                <option selected="">10 derniers jours</option>
                            </select>
                        </div>
                    </div>
                    <div id="coin_sales4" style="height: 240px; text-align: center;">
                        <p> 10 derniers jours :  +{{ contacts|length }} Messages</p>
                        {% for contact in contacts %}
                            <p> <span>{{ contact.getEmail|u.truncate(10, ' ') }}  :</span> <span> {{  contact.getCreateAt|date("m/d/Y") }}</span></p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    <div class="card mt-5">
        <div class="card-body">
            <h4 class="header-title">Commandes</h4>
            <div class="table-responsive">
                <table class="dbkit-table">
                    <tbody>
                    <tr class="heading-td">
                        <td>Nom</td>
                        <td>Code</td>
                        <td>Status</td>
                        <td>Prix</td>
                        <td>Date</td>
                        <td>Action</td>
                    </tr>
                    {% for order in orders %}
                    <tr>
                        <td>{{  order.getCustomerName }}-{{  order.getCustomerUsername }}</td>
                        <td>{{  order.id }}</td>
                        <td><span class="pending_dot">En attente</span></td>
                        <td>{{  order.getPrice }}</td>
                        <td>{{  order.getCreateDate|date("m/d/Y") }}</td>
                        <td><a href="{{ path('view_order_admin', { 'id': order.id }) }}">View Order</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
{#            <div class="pagination_area pull-right mt-5">
                <ul>
                    <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
                </ul>
            </div>#}
        </div>
    </div>
    </div>
    </div>
</div>
{% endblock %}
