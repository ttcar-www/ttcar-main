    <script>
        $(function () {

            let show_renault = document.getElementsByClassName("show_renault");
            let show_peugeot = document.getElementsByClassName("show_peugeot");
            let show_citroen = document.getElementsByClassName("show_citroen");
            let show_ds = document.getElementsByClassName("show_ds");

            var no_promo_checked = document.getElementById("no_promo_checked");

            $("#renault_check").click(function () {
                if ($(this).is(":checked")) {
                    $(show_renault).show();
                    no_promo_checked.style.display = "none";
                } else {
                    $(show_renault).hide();
                }
                if ($("input:checkbox[name=cb1]").is(":checked")){
                    no_promo_checked.style.display = "none";
                } else {
                    no_promo_checked.style.display = "block";
                }
            });

            $("#peugeot_check").click(function () {
                if ($(this).is(":checked")) {
                    $(show_peugeot).show();
