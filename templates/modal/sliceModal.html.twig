<!-- Modal -->
<div class="modal" id="sliceModal"  role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" id="modalClose" onclick="CloseModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <header class="s-headerSubmit s-lineDownLeft wow zoomInUp" data-wow-delay="0.5s">
                    <h2 class="">Ajouter une tranche au prix {{ priceId }}</h2>
                </header>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <div class="b-submit__main-element wow zoomInUp" data-wow-delay="0.5s">
                            <label>Code <span>*</span></label>
                            <div class='s-relative'>
                                {{ form_row(form.code_price) }}
                            </div>
                        </div>
                        <div class="b-submit__main-element wow zoomInUp" data-wow-delay="0.5s">
                            <label>Jours <span>*</span></label>
                            <div class='s-relative'>
                                {{ form_row(form.days) }}
                            </div>
                        </div>
                        <div class="b-submit__main-element wow zoomInUp" data-wow-delay="0.5s">
                            <label>Valeur <span>*</span></label>
                            <div class='s-relative'>
                                {{ form_row(form.value) }}
                            </div>
                        </div>
                        <div class="b-submit__main-element wow zoomInUp" data-wow-delay="0.5s">
                            <label>Prix fournisseur <span>*</span></label>
                            <div class='s-relative'>
                                {{ form_row(form.priceSupplierValue) }}
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn m-btn">Enregistrer<span class="fa fa-angle-right"></span></button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

