{% extends 'douane/base_douane.html.twig' %}

{% block body %}
    <main id="contact">
        <section class="bg-img douane mb-4" style="opacity: 1">
            <div class="container">
                <div class="row px-3 mb-5">
                    <div class="col-lg-10 mx-auto">

                        <div class="bg-blue-transparent card mb-5">
                            <div class="p-md-5 p-3 col-lg-10 mx-auto">
                                <div class="text-center">
                                    <h1 class="title has-decoration">Contact</h1>
                                    <p>
                                        <strong>Besoin d’aide ?<br />
                                            N’hésitez pas à nous contacter, nos équipes se tiennent à votre disposition</strong>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white-transparent card mb-5">
                            <div class="p-md-5 p-3 col-lg-12 mx-auto">
                                <div class="row mb-3">
                                    <div class="col-lg-8 mb-4 mb-xs-4">
                                        <div class="wrapper">
                                            <form class="form-horizontal row">
                                                {{ form_start(form) }}

                                                <div class="col-sm-6">
                                                    <div class="form-group row mb-3">
                                                        <label class="col-form-label col-sm-4">Nom</label>
                                                        <div class="col-sm-8">
                                                            {{ form_row(form.name, { 'attr': {'class': 'form-control'} }) }}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-3">
                                                        <label class="col-form-label col-sm-4">Prénom</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-sm-6">
                                                    <div class="form-group row mb-3">
                                                        <label class="col-form-label col-sm-4">Mail</label>
                                                        <div class="col-sm-8">
                                                            {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-3">
                                                        <label class="col-form-label col-sm-4">Téléphone</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-sm-12">
                                                    <div class="form-group row mb-3">
                                                        <div class="col-sm-2 p-0">
                                                            <label class="col-form-label w-100"
                                                            >Votre<br />
                                                                demande</label
                                                            >
                                                        </div>
                                                        <div class="col-sm-10">
                                                            {#                                                            <textarea type="text" class="form-control" rows="4"></textarea>#}
                                                            {{ form_row(form.content, { 'attr': {'class': 'form-control form-control-lg textarena_large'} }) }}
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="text-end">
                                                    <button class="btn btn-alt has-shadow px-5" id="btn-submit" type="submit">Envoyer</button>
                                                </div>
                                                {{ form_end(form) }}
                                            </form>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="bg-blue-transparent px-3 py-5 text-center">
                                            <span class="d-block fw-bold mb-2">Téléphone :</span>
                                            <a class="btn btn-alt mb-2" href="">+33 (0)1 40 71 72 65/57</a>
                                            <p class="fst-italic mb-5">Pour modifier une réservation, contactez-nous directement par téléphone pour que votre demande soit traitée rapidement.</p>
                                            <span class="d-block fw-bold mb-2">Email :</span>
                                            <a class="btn btn-alt mb-2" href="">info@ttcar.net</a>
                                            <span class="d-block fw-bold mb-2">Fax :</span>
                                            <a class="btn btn-alt mb-2" href="">+33 (0)1 40 71 00 14</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </section>
    </main>
{% endblock %}
