{% extends 'admin/admin.html.twig' %}

{% block body %}
    <div class="group_text">
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-warning flash-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <!-- Striped table start -->
        <div class="col-lg-12 mt-5" style="padding-bottom: 5%">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Toutes les tranches de prix</h4>
{#
                    <a href="{{ path('create_work') }}" style="color: darkslategrey; margin-left: 5%" class="btn btn-light"><i class="fas fa-map-marked-alt"></i> Ajouté une raison</a>
#}
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Code</th>
                                    <th scope="col">Valeur</th>
                                    <th scope="col">Jours minimum</th>
                                    <th scope="col">Jours maximum</th>
                                    <th scope="col">Valeur</th>
                                    <th scope="col">Nombre de jours</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Opérateurs</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for slice in slices %}
                                    <tr>
                                        <th scope="row">{{ slice.id }}</th>
                                        <td>{{ slice.getCodePrice }}</td>
                                        <td>{{ slice.value }}</td>
                                        <td>{{ slice.getCodePrice }}</td>
                                        <td>{{ slice.getDaysMin }}</td>
                                        <td>{{ slice.getDaysMax }}</td>
                                        <td>{{ slice.getDays }}</td>
                                        <td>{{ slice.type }}</td>
                                        <td>{{ slice.operators }}</td>
                                        <td><a href="{{ path('delete_slice', { 'id': slice.id }) }}" onclick="return confirm(' you want to delete?');" class="action-delete"><i class="ti-trash"></i></a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Striped table end -->
    </div>
{% endblock %}
