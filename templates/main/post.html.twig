                                    <div class="b-article__main-related-item wow zoomInUp" data-wow-delay="0.5s">
                                        <div class="row m-smallPadding">
                                            <div class="col-xs-4">
                                                <img class="center-block img-responsive" src="{{ asset('build/uploads/'~ postLast.getPostImg) }}" alt="related" />
                                            </div>
                                            <div class="col-xs-8">
                                                <h5><a href="{{ path('see_post', { 'id': postLast.id }) }}">{{ postLast.title }}</a></h5>
                                                <div class="b-blog__posts-one-body-head-notes">
                                                    <span class="b-blog__posts-one-body-head-notes-note"><span class="fa fa-user"></span>{{ postLast.author }}</span>
                                                    <span class="b-blog__posts-one-body-head-notes-note"><span class="fa fa-calendar-o"></span>{{ postLast.getCreateAt|date("m/d/Y") }}</span>
                                                </div>
