{% extends 'admin/admin.html.twig' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <div class="col-lg-6 col-ml-12">
                <div class="row">
                    <!-- Textual inputs start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">Ajouter un accèssoire</h4>
                                {{ form_start(form) }}
                                <div class="row">
                                    <div class="col">
                                        <label>Nom de l'accessoire<span>*</span></label>
                                        {{ form_row(form.libelle) }}
                                    </div>
                                    <div class="col">
                                        <label>Année <span>*</span></label>
                                        {{ form_row(form.year) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <label>Prix à l'unité <span>*</span></label>
                                        {{ form_row(form.price) }}
                                    </div>
                                    <div class="col">
                                        <label>Marque <span>*</span></label>
                                        {{ form_row(form.mark) }}
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label>Image <span>*</span></label>
                                    {{ form_row(form.itemImg) }}
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Créer</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
