{% extends 'base.html.twig' %}

{% block body %}
    <style>
        :root {
            --first-color: #345f8a;
            --first-color-alt: rgba(52,95,138,.8);
            --body-font: "Montserrat", sans-serif;
            --white: hsl(0, 0%, 100%);
            --white-opacity: rgba(255,255,255,.8);
            --white-opacity-light: rgba(255,255,255,.1);
            --grey-opacity: rgba(250, 250, 250, .9);
            --grey-light: #ACACAC;
            --grey: #E6E6E6;
        }


        body {
            margin: 0;
            padding: 0;
            font-family: var(--body-font);
            font-size: var(--normal-font-size);
            background-color: var(--body-color);
            color: #345f8a;
        }

        p, li {
            color: #345f8a;

        }

        .row {
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 0;
            display: flex;
            flex-wrap: wrap;
            margin-top: calc(-1 * var(--bs-gutter-y));
            margin-right: calc(-.5 * var(--bs-gutter-x));
            margin-left: calc(-.5 * var(--bs-gutter-x));
        }
        .row > * {
            flex-shrink: 0;
            width: 100%;
            max-width: 100%;
            padding-right: calc(var(--bs-gutter-x) * .5);
            padding-left: calc(var(--bs-gutter-x) * .5);
            margin-top: var(--bs-gutter-y);
        }

        .col {
            flex: 1 0 0;
        }

        .bg-img {
            background-position: center;
            background-size: cover;
            padding-top: 10vh;
        }

        .bg-white-transparent {
            background-color: var(--white-opacity);
            border-radius: 1em;
            padding: 1.5rem 2rem;
        }
        .bg-white-transparent input, .bg-white-transparent textarea {
            border: 2px solid var(--grey);
        }

        #faq .bg-img {
            background-image: url({{ asset('build/images/bg-livraison.png') }});
            height: 100vh;
        }
        #faq .bg-img .title.has-decoration::before {
            background-image: url({{ asset('build/images/icone-question.png') }});
        }
        #faq .accordion-item {
            border-radius: 2rem;
            background-color: #FFFFFF;
            border: 2px solid var(--grey);
            margin-bottom: 1rem;
        }
        #faq .accordion-header button {
            font-weight: 700;
            font-size: 18px;
        }
        #faq .accordion-collapse {
            margin-bottom: 1.5rem;
        }

        .title {
            text-transform: none;
            display: table;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 1rem;
            font-size: 24px;
        }
        .title.has-decoration {
            padding-left: 2rem;
            position: relative;
        }
        .bg-blue-transparent {
            background-color: var(--first-color-alt);
            border-radius: 1em;
            color: #FFFFFF;
            padding: 2rem 3rem;
        }
        .form-control {
            display: block;
            width: 100%;
            padding: 0.8rem 1.5rem;
            font-size: 0.9rem;
            font-weight: 400;
            line-height: 1.5;
            color: #345f8a;
            background-color: #fff;
            background-clip: padding-box;
            border: 0px solid #ced4da;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border-radius: 2rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
        .col-form-label {
            background-color: var(--first-color);
            border-radius: 1.5em;
            font-weight: 700;
            -webkit-filter: drop-shadow(0px 3px 6px rgba(0, 0, 0, 0.161));
            filter: drop-shadow(0px 3px 6px rgba(0, 0, 0, 0.161));
            text-align: center;
            color: #FFFFFF;
        }
        .btn {
            display: inline-block;
            font-weight: 700;
            line-height: 1.5;
            color: #345f8a;
            text-align: center;
            text-decoration: none;
            vertical-align: middle;
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background-color: transparent;
            border: 1px solid transparent;
            padding: 0.8rem 1.5rem;
            font-size: 0.9rem;
            border-radius: 1.5rem;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
        .btn.btn-alt {
            background: #FFFFFF;
            color: #F72b37;
        }
        .btn.btn-alt.alt {
            position: relative;
            font-weight: normal;
            font-style: italic;
            font-size: 14px;
            padding-right: 1rem;
        }
        .btn.btn-alt.alt::after {
            position: absolute;
            right: 0;
            font: var(--fa-font-solid);
            font-weight: 400;
            content: "";
        }

        section {
            padding-top: 3rem;
            padding-bottom: 3rem;
        }

        .mb-4 {
            margin-bottom: 1.5rem !important;
        }

        .mb-5 {
            margin-bottom: 3rem !important;
        }

        .justify-content-between {
            justify-content: space-between !important;
        }

        .accordion-button {
            position: relative;
            display: flex;
            align-items: center;
            width: 100%;
            padding: 1.25rem 2rem;
            font-size: 0.9rem;
            color: #345f8a;
            text-align: left;
            background-color: unset;
            border: 0;
            border-radius: 0;
            overflow-anchor: none;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out, border-radius 0.15s ease;
        }

        .accordion-button:not(.collapsed) {
            color: #2f567c;
            background-color: unset;
            box-shadow: inset 0 0 0 var(--grey);
        }
        .accordion-button:not(.collapsed)::after {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23F72b37'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
            -webkit-transform: rotate(-180deg);
            transform: rotate(-180deg);
        }
        .accordion-button::after {
            flex-shrink: 0;
            width: 1.25rem;
            height: 1.25rem;
            margin-left: auto;
            content: "";
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23F72b37'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-size: 1.25rem;
            transition: -webkit-transform 0.2s ease-in-out;
            transition: transform 0.2s ease-in-out;
            transition: transform 0.2s ease-in-out, -webkit-transform 0.2s ease-in-out;
        }

        .accordion-button:focus {
            z-index: 3;
            border-color: #9aafc5;
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgba(52, 95, 138, 0.25);
        }

        .accordion-header {
            margin-bottom: 0;
        }


        .accordion-body {
            padding: 1.25rem 2rem;
        }

        .accordion-flush .accordion-collapse {
            border-width: 0;
        }
        .accordion-flush .accordion-item {
            border-right: 0;
            border-left: 0;
            border-radius: 0;
        }
        .accordion-flush .accordion-item:first-child {
            border-top: 0;
        }
        .accordion-flush .accordion-item:last-child {
            border-bottom: 0;
        }
        .accordion-flush .accordion-item .accordion-button {
            border-radius: 0;
        }


